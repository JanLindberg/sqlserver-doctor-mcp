# SQL Server Connection Settings
# Copy this file to .env and update with your actual values

# Server connection
SQL_SERVER_HOST=localhost
SQL_SERVER_PORT=1433
SQL_SERVER_DATABASE=master

# Authentication
# Windows Authentication: leave USER and PASSWORD empty
# SQL Server Authentication: provide USER and PASSWORD
SQL_SERVER_USER=
SQL_SERVER_PASSWORD=

# Connection options
# Driver options: "ODBC Driver 17 for SQL Server" or "ODBC Driver 18 for SQL Server"
# Driver 17 is more commonly available on macOS
SQL_SERVER_DRIVER=ODBC Driver 17 for SQL Server
SQL_SERVER_TRUST_CERT=yes
SQL_SERVER_ENCRYPT=no
